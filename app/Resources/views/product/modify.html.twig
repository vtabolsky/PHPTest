{% extends 'base.html.twig' %}

{% block body %}
    <div id="wrapper">
        <div id="modify">
			{% for flash_message in app.session.flashBag.get('error') %}
				<div class="flash-msg error">
					{{ flash_message }}
				</div>
			{% endfor %}
			
			<h1>{{title}}</h1>

			
			{{ form_start(form) }}
				{{ form_errors(form) }}
				
				{{ form_widget(form) }}
				
				<div class="clearfix">
					<input type="submit" value="Save product" class="btn pull-left"/>
					<a class="btn pull-right" href="/">Back to list</a>
				</div>
		
			{{ form_end(form) }}

		</div>
	</div>
	
	<script type="text/javascript">
    $(document).ready(function() {
        $("#product_tags").tagit({
			
		});
    });
	</script>

{% endblock %}

